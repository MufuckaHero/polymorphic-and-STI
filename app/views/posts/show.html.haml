#post_show.row
  .col-md-8.col-md-offset-2
    .panel.panel-default
      .panel-heading.post_image
        = image_tag @post.picture.data_url if @post.picture
      .panel-body
        %h1= @post.title 
        %p= @post.content 
      .panel-footer
        .row
          .col-md-6
            = l @post.created_at, format: :short
          .col-md-6
            .btn-group.pull-right 
              = link_to t(:edit), edit_post_path(@post), class: "btn btn-default"
              = link_to t(:destroy), post_path(@post), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default"
      .panel-footer
        -@post_tags.each do |tag|
          .label.label-default
            =tag.name
    %br
      = link_to t(:new_comment), new_post_comment_path(@post), class: "btn btn-default"
    %br
      = render 'comments/index'