#event_show.row
  .col-md-8.col-md-offset-2
    .panel.panel-default
      .panel-body
        %h1= @event.title 
        %p= @event.address 
      .panel-footer
        .row
          .col-md-6
            = @event.created_at.strftime("%B %d, %Y")
          .col-md-6
            .btn-group.pull-right 
              = link_to 'Edit', edit_event_path(@event), class: "btn btn-default"
              = link_to 'Destroy', event_path(@event), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default"
              = link_to "Download Attachment", @event.attachment.data_url , class: "btn btn-default" if @event.attachment
      .panel-footer
        .row
          .col-md-6
            -@event_tags.each do |tag|
              .label.label-default
                = tag.name
    %br
      = link_to "New Comment", new_event_comment_path(@event), class: "btn btn-default"
    %br
      = render 'comments/index'