#event_show.row
  .col-md-8.col-md-offset-2
    .panel.panel-default
      .panel-body
        %h1= @event.title 
        %p= @event.address 
      .panel-footer
        .row
          .col-md-6
            = l @event.created_at, format: :short
          .col-md-6
            .btn-group.pull-right 
              = link_to t(:edit), edit_event_path(@event), class: "btn btn-default"
              = link_to t(:destroy), event_path(@event), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default"
              = link_to t(:download_attachment), @event.attachment.data_url , class: "btn btn-default" if @event.attachment
      .panel-footer
        -@event_tags.each do |tag|
          .label.label-default
            =tag.name
    %br
      = link_to t(:new_comment), new_event_comment_path(@event), class: "btn btn-default"
    %br
      = render 'comments/index'