= simple_form_for @event, multipart: true do |f| 
  = if @event.errors.any? 
    #errors
    %h3
      = "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
    %ul
      - @event.errors.full_messages.each do |msg|
        %li= msg  
  .form-group
    = f.simple_fields_for :attachment do |p| 
      = p.input :data, label: "Attachment"
  .form-group
    = f.input :title
  .form-group
    = f.input :address
  .form-group
    = f.label :tags
    = select_tag(:tag_ids,options_from_collection_for_select(@tags, :id, :slug), multiple: true, class: 'form-control')
  = f.button :submit, class: 'btn btn-default' 